<h1>Simple Messanger Home Page</h1>

<div class="std-div">
  <h2 id="register-h2">Register</h2>
  <!-- TODO popup registration form -->
  <%= button_to "Sign Up", { controller: 'users', action: 'new' },
    method: :get, form_class: 'register-form' %>
</div>

<div class="std-div">
  <h2 id="login-h2">Login</h2>
  <%= form_tag '/login' do %>
    <% if flash[:notice] %>
      <div id="login-error">
        <%= flash[:notice] %>
      </div>
    <% end %>
    Email:<br />
    <%= text_field_tag :email, flash[:email] || '' %><br />
    Password:<br />
    <%= password_field_tag :password %><br /><br />
    <%= submit_tag "Submit" %><br />
  <% end %>
</div>
